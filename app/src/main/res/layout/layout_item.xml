<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_main_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_layout_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_layout_bg"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_vertical"
                android:padding="8dp"
                app:srcCompat="@drawable/ic_store_lowes" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/itemLblName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name:" />

                    <TextView
                        android:id="@+id/itemTextName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight=".8"
                        android:maxLines="3"
                        android:minLines="1"
                        android:scrollbars="horizontal|vertical"
                        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Donec a lacus nisl. Suspendisse posuere eget nunc in mattis. Proin mi enim, scelerisque eget ligula vel, mattis accumsan augue." />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/itemLblInitialPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Initial Price:" />

                    <TextView
                        android:id="@+id/itemTextInitialPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight=".8"
                        android:text="~Initial Price Here~" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/itemLblCurrentPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="8dp"
                        android:text="Current Price:" />

                    <TextView
                        android:id="@+id/itemTextCurrentPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight=".8"
                        android:text="~Current Price Here~" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/itemLblChangedPercent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="% Change:" />

                    <TextView
                        android:id="@+id/itemTextChangedPercent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight=".8"
                        android:text="~Change Here~" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/itemLblURL"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="URL:" />

                    <TextView
                        android:id="@+id/itemTextURL"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight=".8"
                        android:maxLines="3"
                        android:minLines="1"
                        android:scrollbars="horizontal|vertical"
                        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Donec a lacus nisl. Suspendisse posuere eget nunc in mattis. Proin mi enim, scelerisque eget ligula vel, mattis accumsan augue." />
                </TableRow>
            </TableLayout>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>